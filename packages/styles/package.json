{
  "name": "@zero-dim/styles",
  "type": "module",
  "version": "1.0.0",
  "description": "@zero-dim/styles for ZeroDim NoCode",
  "homepage": "https://github.com/zero-dim/core/#readme",
  "repository": {
    "type": "http",
    "url": "https://github.com/zero-dim/core"
  },
  "bugs": "https://github.com/zero-dim/core/issues",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/zero-dim-styles.js",
      "require": "./dist/zero-dim-styles.js"
    },
    "./css": {
      "import": "./dist/style.css"
    },
    "./tailwindCss": {
      "import": "./src/tailwind.css",
      "require": "./src/tailwind.css"
    },
    "./tailwindConfig": {
      "import": "./src/tailwind.config.ts",
      "require": "./src/tailwind.config.ts"
    }
  },
  "main": "./dist/zero-dim-styles.js",
  "module": "./dist/zero-dim-styles.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "build:all": "vite build",
    "clean": "rimraf node_modules",
    "clean:dist": "rimraf dist"
  },
  "devDependencies": {
    "@al-config/tsconfig": "workspace:^",
    "@al-config/vite": "workspace:^",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.45",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.3",
    "vitest": "^2.0.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
